<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PixelCallRecorder" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.PixelCallRecorder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PixelCallRecorder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PixelCallRecorder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
