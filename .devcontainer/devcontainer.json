{
  "name": "Pixel Call Recorder - Android ARM64",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "ANDROID_SDK_VERSION": "35",
      "ANDROID_NDK_VERSION": "27.2.12479018"
    }
  },
  "mounts": [
    "source=${env:HOME}/.gradle,target=/home/vscode/.gradle,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--cap-add=SYS_PTRACE"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "saoudrizwan.claude-dev",
        "coolcline.coolcline",
        "RooVeterinaryInc.roo-cline",
        "google.android-ios-emulator",
        "vscjava.vscode-java-pack",
        "vscode-gradle.vscode-gradle"
      ]
    }
  },
  "containerEnv": {
    "ANDROID_HOME": "/home/vscode/Android/Sdk",
    "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-arm64"
  },
  "remoteUser": "vscode",
  "features": {},
  "postCreateCommand": "echo 'ARM64 Android devcontainer ready!'"
}
